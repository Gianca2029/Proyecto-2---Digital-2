/**
  * @brief GPIO Initialization Function
  * @param None
  * @retval None
  */
static void MX_GPIO_Init(void)
{
  GPIO_InitTypeDef GPIO_InitStruct = {0};
/* USER CODE BEGIN MX_GPIO_Init_1 */
/* USER CODE END MX_GPIO_Init_1 */

  /* GPIO Ports Clock Enable */
  __HAL_RCC_GPIOC_CLK_ENABLE();
  __HAL_RCC_GPIOH_CLK_ENABLE();
  __HAL_RCC_GPIOA_CLK_ENABLE();
  __HAL_RCC_GPIOB_CLK_ENABLE();

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(ESP32_CS_GPIO_Port, ESP32_CS_Pin, GPIO_PIN_SET);

  /*Configure GPIO pin : BTN_Pin */
  GPIO_InitStruct.Pin = BTN_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_IT_FALLING;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  HAL_GPIO_Init(BTN_GPIO_Port, &GPIO_InitStruct);

  /*Configure GPIO pin : ESP32_CS_Pin */
  GPIO_InitStruct.Pin = ESP32_CS_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  HAL_GPIO_Init(ESP32_CS_GPIO_Port, &GPIO_InitStruct);

  /* EXTI interrupt init*/
  HAL_NVIC_SetPriority(EXTI15_10_IRQn, 0, 0);
  HAL_NVIC_EnableIRQ(EXTI15_10_IRQn);

/* USER CODE BEGIN MX_GPIO_Init_2 */
/* USER CODE END MX_GPIO_Init_2 */
}

/* USER CODE BEGIN 4 */
uint8_t UART_Receive_Line(uint8_t* buf, uint16_t max_len) {
    uint16_t count = 0;
    uint8_t temp_char;

    while (count < (max_len - 1)) {
        if (HAL_UART_Receive(&huart2, &temp_char, 1, HAL_MAX_DELAY) == HAL_OK) {
            if (temp_char == '\r') { // 'Enter' presionado
                break;
            }
            buf[count++] = temp_char;
            HAL_UART_Transmit(&huart2, &temp_char, 1, HAL_MAX_DELAY); // Echo
        }
    }
    buf[count] = '\0'; // Terminar el string
    return count;
}


void handle_spi_request(void) {
    uint8_t spi_tx_data[MAX_SPI_CMD_LEN];
    uint8_t len;
	
    char msg[] = "\nIngrese comando SPI (ej: 1,500) y presione Enter:\r\n";
    HAL_UART_Transmit(&huart2, (uint8_t *)msg, strlen(msg), HAL_MAX_DELAY);

    len = UART_Receive_Line(spi_tx_data, MAX_SPI_CMD_LEN);

    if (len > 0) {
        HAL_GPIO_WritePin(ESP32_CS_GPIO_Port, ESP32_CS_Pin, GPIO_PIN_RESET);
        HAL_Delay(1); // Pequeña demora
        HAL_SPI_Transmit(&hspi1, spi_tx_data, len, HAL_MAX_DELAY);
        HAL_GPIO_WritePin(ESP32_CS_GPIO_Port, ESP32_CS_Pin, GPIO_PIN_SET);

        char confirm[] = "\nComando SPI enviado.\r\n";
        HAL_UART_Transmit(&huart2, (uint8_t *)confirm, strlen(confirm), HAL_MAX_DELAY);
    } else {
        char err[] = "\nNo se ingreso comando.\r\n";
        HAL_UART_Transmit(&huart2, (uint8_t *)err, strlen(err), HAL_MAX_DELAY);
    }
    HAL_Delay(1000); // Pausa antes de volver al menú
}

void handle_i2c_request(void) {
	uint8_t i2c_rx_data[I2C_DATA_LEN];
	char result_str[50];
	
    char msg[] = "\nSolicitando datos al sensor I2C...\r\n";
    HAL_UART_Transmit(&huart2, (uint8_t *)msg, strlen(msg), HAL_MAX_DELAY);

    // Se mantiene la lógica de doble recepción que funcionaba
    if (HAL_I2C_Master_Receive(&hi2c1, (SLAVE_I2C_ADDR << 1), i2c_rx_data, I2C_DATA_LEN, HAL_MAX_DELAY) == HAL_OK) {
    	HAL_Delay(100);
    	HAL_I2C_Master_Receive(&hi2c1, (SLAVE_I2C_ADDR << 1), i2c_rx_data, I2C_DATA_LEN, HAL_MAX_DELAY);

        snprintf(result_str, sizeof(result_str), "\nValor del sensor: %s\r\n", i2c_rx_data);
        HAL_UART_Transmit(&huart2, (uint8_t *)result_str, strlen(result_str), HAL_MAX_DELAY);
    } else {
        char err[] = "\nError: No hay respuesta del dispositivo I2C.\r\n";
        HAL_UART_Transmit(&huart2, (uint8_t *)err, strlen(err), HAL_MAX_DELAY);
    }
    HAL_Delay(2000); // Pausa antes de volver al menú
}

void display_main_menu(void) {
    char title[] = "\r\n*** Panel de Control [Proyecto 2] ***\r\n";
    char line1[] = "   1. Controlar Actuador (SPI)\r\n";
    char line2[] = "   2. Leer Sensor (I2C)\r\n";
    char prompt[] = "Seleccione una opcion: ";
	
    HAL_UART_Transmit(&huart2, (uint8_t *)title, strlen(title), HAL_MAX_DELAY);
    HAL_UART_Transmit(&huart2, (uint8_t *)line1, strlen(line1), HAL_MAX_DELAY);
    HAL_UART_Transmit(&huart2, (uint8_t *)line2, strlen(line2), HAL_MAX_DELAY);
    HAL_UART_Transmit(&huart2, (uint8_t *)prompt, strlen(prompt), HAL_MAX_DELAY);
}
/* USER CODE END 4 */

